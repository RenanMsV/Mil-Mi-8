<?xml version="1.0" encoding="UTF-8"?>
<!--

  <position>
    +x = aft
    +y = left
    +z = up

-->
<PropertyList>
  <fx>
    <crank>
      <name>crank</name>
      <mode>once</mode>
      <path>Aircraft/Mil-Mi-8/Sounds/turbine-start.wav</path>
      <max-dist>20</max-dist>
      <reference-dist>2</reference-dist>
      <condition>
        <property>controls/engines/engine/starter</property>
      </condition>
      <volume>
        <property>/sim/model/sound/volume</property>
      </volume>
      <pitch>
        <property>controls/engines/engine/starter</property>
        <factor>0.2</factor>
      </pitch>
      <position>
        <x>-0.3</x>
        <y>0</y>
        <z>-1.5</z>
      </position>
    </crank>
    <engine>
      <name>engine</name>
      <mode>looped</mode>
      <path>Aircraft/Mil-Mi-8/Sounds/turbine-loop.wav</path>
      <max-dist>500</max-dist>
      <reference-dist>150</reference-dist>
      <condition>
        <and>
          <not>
            <property>sim/crashed</property>
          </not>
          <greater-than>
            <property>engines/engine/rpm</property>
            <value>100</value>
          </greater-than>
          <not>
            <property>sim/current-view/internal</property>
          </not>
        </and>
      </condition>
      <volume>
        <property>/sim/model/sound/volume</property>
      </volume>
      <pitch>
        <property>/engines/engine/rpm</property>
        <offset>0</offset>
        <factor>0.0005</factor>
        <min>0.35</min>
        <max>1.0</max>
      </pitch>
      <position>
        <x>-0.3</x>
        <y>0</y>
        <z>-1.5</z>
      </position>
    </engine>
    <engine-internal>
      <name>engine-internal</name>
      <mode>looped</mode>
      <path>Aircraft/Mil-Mi-8/Sounds/turbine-loop.wav</path>
      <reference-dist>4.0</reference-dist>
      <max-dist>10.0</max-dist>
      <condition>
        <and>
          <not>
            <property>sim/crashed</property>
          </not>
          <property>sim/current-view/internal</property>
          <greater-than>
            <property>engines/engine/rpm</property>
            <value>100</value>
          </greater-than>
        </and>
      </condition>
      <pitch>
        <property>engines/engine/rpm</property>
        <factor>0.0005</factor>
        <min>0.35</min>
        <max>1.0</max>
        <offset>0.15</offset>
      </pitch>
    </engine-internal>
    <rotor>
      <name>main rotor</name>
      <mode>looped</mode>
      <path>Aircraft/Mil-Mi-8/Sounds/rotor-loop.wav</path>
      <max-dist>100</max-dist>
      <reference-dist>50</reference-dist>
      <condition>
        <and>
          <not>
            <property>sim/crashed</property>
          </not>
          <greater-than>
            <property>rotors/main/rpm</property>
            <value>50</value>
          </greater-than>
          <or>
            <not>
              <property>sim/current-view/internal</property>
            </not>
          </or>
        </and>
      </condition>
      <volume>
        <property>/sim/model/sound/volume</property>
      </volume>
      <volume>
        <property>rotors/main/rpm</property>
        <factor>0.005</factor>
        <min>0</min>
        <max>1.0</max>
      </volume>
      <pitch>
        <property>rotors/main/rpm</property>
        <factor>0.0018</factor>
        <offset>0.0</offset>
        <min>0.00</min>
        <max>1.0</max>
      </pitch>
      <position>
        <x>0</x>
        <y>0</y>
        <z>0.3</z>
      </position>
    </rotor>
    <rotor-internal>
      <name>rotor-internal</name>
      <mode>looped</mode>
      <path>Aircraft/Mil-Mi-8/Sounds/rotor-loop.wav</path>
      <reference-dist>4.0</reference-dist>
      <max-dist>10.0</max-dist>
      <condition>
        <and>
          <not>
            <property>sim/crashed</property>
          </not>
          <property>sim/current-view/internal</property>
          <greater-than>
            <property>rotors/main/rpm</property>
            <value>100</value>
          </greater-than>
        </and>
      </condition>
      <volume>
        <property>/sim/model/sound/volume</property>
      </volume>
      <volume>
        <property>rotors/main/rpm</property>
        <factor>0.005</factor>
        <min>0</min>
        <max>1.0</max>
      </volume>
      <pitch>
        <property>rotors/main/rpm</property>
        <factor>0.0018</factor>
        <offset>0.0</offset>
        <min>0.00</min>
        <max>1.0</max>
      </pitch>
      <position>
        <x>0</x>
        <y>0</y>
        <z>0.3</z>
      </position>
    </rotor-internal>
    <overspeed>
      <name>overspeed</name>
      <mode>looped</mode>
      <path>Sounds/overspeed.wav</path>
      <condition>
        <greater-than>
          <property>velocities/airspeed-kt</property>
          <value>130</value>
        </greater-than>
        <equals>
          <property>sim/current-view/view-number</property>
          <value>0</value>
        </equals>
      </condition>
      <volume>
        <factor>1.0</factor>
      </volume>
      <pitch>
        <factor>0.1</factor>
      </pitch>
      <reference-dist>1.0</reference-dist>
      <max-dist>2.0</max-dist>
    </overspeed>
    <overspeed>
      <name>overspeed</name>
      <mode>looped</mode>
      <path>Sounds/overspeed2.wav</path>
      <condition>
        <greater-than>
          <property>velocities/airspeed-kt</property>
          <value>131</value>
        </greater-than>
        <equals>
          <property>sim/current-view/view-number</property>
          <value>0</value>
        </equals>
      </condition>
      <volume>
        <factor>1.0</factor>
      </volume>
      <pitch>
        <factor>0.1</factor>
      </pitch>
      <reference-dist>1.0</reference-dist>
      <max-dist>2.0</max-dist>
    </overspeed>
    <contact>
      <name>ground contact</name>
      <mode>once</mode>
      <path>Aircraft/Mil-Mi-8/Sounds/wheel.wav</path>
      <max-dist>10</max-dist>
      <reference-dist>5</reference-dist>
      <condition>
        <or>
          <property>gear/gear[0]/wow</property>
          <property>gear/gear[1]/wow</property>
          <property>gear/gear[2]/wow</property>
          <property>gear/gear[3]/wow</property>
        </or>
      </condition>
      <volume>
        <factor>0.8</factor>
      </volume>
      <pitch>
        <factor>0.01</factor>
      </pitch>
      <max-dist>5.0</max-dist>
      <max-dist>10.0</max-dist>
      <position>
        <x>0</x>
        <y>0</y>
        <z>-2</z>
      </position>
    </contact>
    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Sounds/wind.wav</path>
      <condition>
        <and>
          <property>velocities/airspeed-kt</property>
          <or>
            <not>
              <property>sim/current-view/internal</property>
            </not>
          </or>
          <not>
            <property>sim/crashed</property>
          </not>
        </and>
      </condition>
      <volume>
        <property>position/altitude-ft</property>
        <factor>-0.000015</factor>
        <offset>1.0</offset>
        <min>0.1</min>
        <max>1.0</max>
      </volume>
      <volume>
        <property>velocities/airspeed-kt</property>
        <factor>0.0015</factor>
        <min>0.03</min>
        <max>0.25</max>
      </volume>
      <pitch>
        <property>velocities/airspeed-kt</property>
        <factor>0.01</factor>
        <offset>1.25</offset>
      </pitch>
      <reference-dist>3</reference-dist>
      <max-dist>4</max-dist>
    </wind>
    <wind>
      <name>wind-internal</name>
      <mode>looped</mode>
      <path>Sounds/wind.wav</path>
      <condition>
        <and>
          <property>velocities/airspeed-kt</property>
          <not>
            <property>sim/crashed</property>
          </not>
        </and>
      </condition>
      <volume>
        <property>position/altitude-ft</property>
        <factor>-0.000015</factor>
        <offset>1.0</offset>
        <min>0.1</min>
        <max>1.0</max>
      </volume>
      <volume>
        <property>velocities/airspeed-kt</property>
        <factor>0.0015</factor>
        <min>0.00</min>
        <max>0.25</max>
      </volume>
      <pitch>
        <property>velocities/airspeed-kt</property>
        <factor>0.01</factor>
        <offset>1.25</offset>
      </pitch>
      <reference-dist>3</reference-dist>
      <max-dist>4</max-dist>
    </wind>
    <crash>
      <name>intense ground contact</name>
      <mode>once</mode>
      <path>Sounds/crash.wav</path>
      <property>sim/crashed</property>
      <volume>
        <factor>1</factor>
      </volume>
      <pitch>
        <factor>0.1</factor>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>500</max-dist>
    </crash>
    <crash-fire>
      <name>fire from ground contact</name>
      <mode>looped</mode>
      <path>Aircraft/Mil-Mi-8/Sounds/fire.wav</path>
      <condition>
        <and>
          <property>/sim/crashed</property>
          <!-- damage/sounds/explode-on -->
          <not>
            <property>/sim/replay/replay-state</property>
          </not>
        </and>
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <pitch>
        <factor>0.1</factor>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>500</max-dist>
    </crash-fire>
    <alert>
      <name>rpm warning</name>
      <mode>looped</mode>
      <path>Sounds/beep.wav</path>
      <max-dist>4</max-dist>
      <reference-dist>2</reference-dist>
      <condition>
        <and>
          <property>instrumentation/alerts/rpm</property>
          <less-than>
            <property>rotors/main/rpm</property>
            <value>500</value>
          </less-than>
        </and>
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <position>
        <x>0</x>
        <y>0</y>
        <z>-1.5</z>
      </position>
    </alert>
    <click>
      <name>switches on</name>
      <mode>once</mode>
      <path>Sounds/click.wav</path>
      <max-dist>2</max-dist>
      <reference-dist>1</reference-dist>
      <condition>
        <property>sim/model/sound/click</property>
      </condition>
      <volume>
        <property>sim/model/sound/volume</property>
      </volume>
      <position>
        <x>1.5</x>
        <y>0</y>
        <z>-1.8</z>
      </position>
    </click>
    <click>
      <name>switches off</name>
      <mode>once</mode>
      <path>Sounds/click.wav</path>
      <max-dist>2</max-dist>
      <reference-dist>1</reference-dist>
      <condition>
        <not>
          <property>sim/model/sound/click</property>
        </not>
      </condition>
      <volume>
        <property>sim/model/sound/volume</property>
      </volume>
      <position>
        <x>1.5</x>
        <y>0</y>
        <z>-1.8</z>
      </position>
    </click>
    <door>
      <name>door</name>
      <mode>once</mode>
      <path>Sounds/door_close.wav</path>
      <condition>
        <equals>
          <property>controls/switches/fuselage/left-door-y/position-norm</property>
          <value>0</value>
        </equals>
      </condition>
      <position>
        <x>1.0</x>
        <y>1.5</y>
        <z>-1.5</z>
      </position>
      <volume>
        <factor>0.3</factor>
      </volume>
      <reference-dist>15</reference-dist>
      <max-dist>50</max-dist>
    </door>
  </fx>
</PropertyList>