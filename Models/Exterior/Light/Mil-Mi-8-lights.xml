<PropertyList>
  <model>
    <name>LandingLightLeft</name>
    <path>Aircraft/Mil-Mi-8/Models/Exterior/Light/flashlight.xml</path>
    <condition>
      <property>controls/lighting/landing-lights</property>
    </condition>
    <offsets>
      <x-m>-5.66205</x-m>
      <y-m>-0.33154</y-m>
      <z-m>-1.31704</z-m>
      <heading-deg>0.000</heading-deg>
    </offsets>
  </model>
  <model>
    <name>StrobeBack</name>
    <path>Aircraft/Mil-Mi-8/Models/Exterior/Light/flashlight.xml</path>
    <condition>
      <property>/controls/lighting/strobe</property>
    </condition>
    <offsets>
      <x-m>9.8</x-m>
      <y-m>0</y-m>
      <z-m>1.39254</z-m>
      <heading-deg>180.000</heading-deg>
    </offsets>
  </model>
  <model>
    <name>NavLeft</name>
    <path>Aircraft/Mil-Mi-8/Models/Exterior/Light/navlightred.xml</path>
    <condition>
      <property>controls/lighting/nav-lights</property>
    </condition>
    <offsets>
      <x-m>-7.15633</x-m>
      <y-m>-1.0745</y-m>
      <z-m>-0.66372</z-m>
      <heading-deg>-90.000</heading-deg>
    </offsets>
  </model>
  <model>
    <name>NavRight</name>
    <path>Aircraft/Mil-Mi-8/Models/Exterior/Light/navlightgreen.xml</path>
    <condition>
      <property>controls/lighting/nav-lights</property>
    </condition>
    <offsets>
      <x-m>-7.15633</x-m>
      <y-m>1.0745</y-m>
      <z-m>-0.66372</z-m>
      <heading-deg>90.000</heading-deg>
    </offsets>
  </model>
  <model>
    <name>RotatingBeacon</name>
    <path>Aircraft/Mil-Mi-8/Models/Exterior/Light/rotatingbeaconlight.xml</path>
    <condition>
      <and>
        <!--property>/sim/model/lights/beacon/state</property-->
        <property>controls/lighting/beacon</property>
      </and>
    </condition>
    <offsets>
      <x-m>4.72881</x-m>
      <y-m>0.</y-m>
      <z-m>1.59726</z-m>
    </offsets>
  </model>

  <!-- Animations below -->

  <animation>
    <type>material</type>
    <object-name>RotatingBeacon</object-name>
    <property-base>/controls/lighting/beacon</property-base>
    <diffuse>
      <red>1.0</red>
      <green>0</green>
      <blue>0.0</blue>
    </diffuse>
    <ambient>
      <red>1</red>
      <green>0</green>
      <blue>0</blue>
    </ambient>
    <emission>
      <red>1.0</red>
      <green>0</green>
      <blue>0</blue>
     <factor-prop>/controls/lighting/beacon</factor-prop>
    </emission>
  </animation>
  <animation>
    <object-name>RotatingBeacon</object-name>
    <type>spin</type>
    <property>/controls/lighting/beacon</property>
    <factor>-30</factor>
    <center>
      <x-m>4.72881</x-m>
      <y-m>0.</y-m>
      <z-m>1.59726</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

</PropertyList>