<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
  <path>Mil-Mi-8.ac</path>

  <model>
    <path>Aircraft/Mil-Mi-8/Models/Interior/Cockpit/Mil-Mi-8-cockpit.xml</path>
  </model>

  <effect>
    <inherits-from>Effects/model-combined-deferred</inherits-from>
    <object-name>Fuselage</object-name>
    <parameters>
      <normalmap-enabled type="int">1</normalmap-enabled>
      <normalmap-dds type="int">0</normalmap-dds>
      <texture n="2">
        <image>Aircraft/Mil-Mi-8/Models/Effects/NormalMap/Fuselage.png</image>
        <filter>linear-mipmap-linear</filter>
        <wrap-s>repeat</wrap-s>
        <wrap-t>repeat</wrap-t>
        <internal-format>normalized</internal-format>
      </texture>
      <reflection-enabled type="int"><use>/sim/model/Mi8/reflection-enabled</use></reflection-enabled>
      <reflect-map-enabled type="int">1</reflect-map-enabled>
      <reflection-correction type="float">-0.5</reflection-correction>
      <reflection-fresnel-factor type="float">1.0</reflection-fresnel-factor>
      <ambient-correction type="float">0.3</ambient-correction>
      <reflection-type type="int">2</reflection-type>
      <reflection-dynamic type="int">1</reflection-dynamic>
      <texture n="5">
        <type>cubemap</type>
        <images>
          <positive-x>Aircraft/Generic/Effects/fgfs-sky2/1.png</positive-x>
          <negative-x>Aircraft/Generic/Effects/fgfs-sky2/4.png</negative-x>
          <positive-y>Aircraft/Generic/Effects/fgfs-sky2/2.png</positive-y>
          <negative-y>Aircraft/Generic/Effects/fgfs-sky2/3.png</negative-y>
          <positive-z>Aircraft/Generic/Effects/fgfs-sky2/6.png</positive-z>
          <negative-z>Aircraft/Generic/Effects/fgfs-sky2/5.png</negative-z>
        </images>
      </texture>
    </parameters>
    <!-- ####################
    ### NORMALMAP INCLUDE ###
    ######################### -->
    <generate>
      <tangent type="int">6</tangent>
      <binormal type="int">7</binormal>
    </generate>
    <technique n="4">
      <pass>
        <program>
          <attribute>
            <name>tangent</name>
            <index>6</index>
          </attribute>
          <attribute>
            <name>binormal</name>
            <index>7</index>
          </attribute>
        </program>
      </pass>
    </technique>
    <technique n="7">
      <pass>
        <program>
          <attribute>
            <name>tangent</name>
            <index>6</index>
          </attribute>
          <attribute>
            <name>binormal</name>
            <index>7</index>
          </attribute>
        </program>
      </pass>
    </technique>
    <technique n="9">
      <pass>
        <program>
          <attribute>
            <name>tangent</name>
            <index>6</index>
          </attribute>
          <attribute>
            <name>binormal</name>
            <index>7</index>
          </attribute>
        </program>
      </pass>
    </technique>
    <!-- ########################
    ### END NORMALMAP INCLUDE ###
    ############################# -->
  </effect>
  <effect>
    <inherits-from>Effects/model-combined-transparent</inherits-from>
    <object-name>DoorGlassExt</object-name>
    <object-name>GlassExt</object-name>
    <parameters>
      <rain-enabled type="int">1</rain-enabled>
      <normalmap-enabled type="int">0</normalmap-enabled>
      <lightmap-enabled type="int">0</lightmap-enabled>
      <reflection-enabled type="int">1</reflection-enabled>
      <reflection-correction type="float">1</reflection-correction>
      <reflect-map-enabled type="int">0</reflect-map-enabled>
      <reflection-fresnel type="float">0</reflection-fresnel>
      <reflection-rainbow type="float">-.1</reflection-rainbow>
      <reflection-noise type="float">-1</reflection-noise>
      <reflection-dynamic type="int">1</reflection-dynamic>
      <texture n="5">
        <type>cubemap</type>
        <images>
          <positive-x>Aircraft/Generic/Effects/fgfs-sky2/1.png</positive-x>
          <negative-x>Aircraft/Generic/Effects/fgfs-sky2/4.png</negative-x>
          <positive-y>Aircraft/Generic/Effects/fgfs-sky2/2.png</positive-y>
          <negative-y>Aircraft/Generic/Effects/fgfs-sky2/3.png</negative-y>
          <positive-z>Aircraft/Generic/Effects/fgfs-sky2/6.png</positive-z>
          <negative-z>Aircraft/Generic/Effects/fgfs-sky2/5.png</negative-z>
        </images>
      </texture>
      <ambient-correction type="float">1</ambient-correction>
      <rendering-hint>transparent</rendering-hint>
      <transparent>true</transparent>
    </parameters>
  </effect>
  <effect>
    <inherits-from>Effects/model-combined-transparent</inherits-from>
    <object-name>Glass</object-name>
    <object-name>DoorGlass</object-name>
    <parameters>
      <rain-enabled type="int">1</rain-enabled>
      <normalmap-enabled type="int">0</normalmap-enabled>
      <lightmap-enabled type="int">0</lightmap-enabled>
      <reflection-enabled type="int">1</reflection-enabled>
      <reflection-correction type="float">1</reflection-correction>
      <reflect-map-enabled type="int">0</reflect-map-enabled>
      <reflection-fresnel type="float">0.0</reflection-fresnel>
      <reflection-rainbow type="float">-.1</reflection-rainbow>
      <reflection-noise type="float">-.1</reflection-noise>
      <reflection-dynamic type="int">1</reflection-dynamic>
      <texture n="5">
        <type>cubemap</type>
        <images>
          <positive-x>Aircraft/Generic/Effects/fgfs-sky2/1.png</positive-x>
          <negative-x>Aircraft/Generic/Effects/fgfs-sky2/4.png</negative-x>
          <positive-y>Aircraft/Generic/Effects/fgfs-sky2/2.png</positive-y>
          <negative-y>Aircraft/Generic/Effects/fgfs-sky2/3.png</negative-y>
          <positive-z>Aircraft/Generic/Effects/fgfs-sky2/6.png</positive-z>
          <negative-z>Aircraft/Generic/Effects/fgfs-sky2/5.png</negative-z>
        </images>
      </texture>
      <ambient-correction type="float">1</ambient-correction>
      <rendering-hint>transparent</rendering-hint>
      <transparent>true</transparent>
    </parameters>
  </effect>
  <!-- Main Rotor Animation -->
  <animation>
    <object-name>ShapeIndexedFaceSet.071</object-name>
    <object-name>MainRotor</object-name>
    <type>spin</type>
    <property>rotors/main/rpm</property>
    <factor>1</factor>
    <condition>
      <not>
        <property>/sim/crashed</property>
      </not>
    </condition>
    <center>
      <x-m>-2.43365</x-m>
      <y-m>-0.01833</y-m>
      <z-m>2.31345</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
  <animation>
    <object-name>MainRotor</object-name>
    <type>spin</type>
    <property>rotors/main/rpm</property>
    <factor>1</factor>
    <condition>
      <not>
        <property>/sim/crashed</property>
      </not>
    </condition>
    <center>
      <x-m>-2.51283</x-m>
      <y-m>0.0137</y-m>
      <z-m>2.79121</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
  <!-- Tail Rotor Animation -->
  <animation>
    <object-name>TailRotor</object-name>
    <object-name>ShapeIndexedFaceSet.052</object-name>
    <type>spin</type>
    <property>rotors/tail/rpm</property>
    <factor>1</factor>
    <condition>
      <not>
        <property>/sim/crashed</property>
      </not>
    </condition>
    <center>
      <x-m>10.2588</x-m>
      <y-m>0</y-m>
      <z-m>2.72059</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <!-- Left Tyre Spin Animation -->
  <animation>
    <object-name>ShapeIndexedFaceSet.019</object-name>
    <type>spin</type>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor>8</factor>
    <condition>
      <not>
        <property>/sim/crashed</property>
      </not>
    </condition>
    <center>
      <x-m>-1.20799</x-m>
      <y-m>-2.2365</y-m>
      <z-m>-1.39815</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  <!-- Right Tyre Spin Animation -->
  <animation>
    <object-name>ShapeIndexedFaceSet.013</object-name>
    <type>spin</type>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor>8</factor>
    <condition>
      <not>
        <property>/sim/crashed</property>
      </not>
    </condition>
    <center>
      <x-m>-1.20799</x-m>
      <y-m>2.25218</y-m>
      <z-m>-1.39815</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  <!-- Nose Tyre Steering Animation -->
  <animation>
    <object-name>ShapeIndexedFaceSet</object-name>
    <object-name>ShapeIndexedFaceSet.003</object-name>
    <object-name>ShapeIndexedFaceSet.005</object-name>
    <object-name>ShapeIndexedFaceSet.008</object-name>
    <object-name>ShapeIndexedFaceSet.033</object-name>
    <type>rotate</type>
    <property>controls/gear/steering</property>
    <factor>-30</factor>
    <center>
      <x-m>-5.74533</x-m>
      <y-m>0.00034</y-m>
      <z-m>-1.60287</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
  <!-- Nose Tyre Spin Animation -->
  <animation>
    <object-name>ShapeIndexedFaceSet</object-name>
    <object-name>ShapeIndexedFaceSet.003</object-name>
    <type>spin</type>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor>10</factor>
    <condition>
      <not>
        <property>/sim/crashed</property>
      </not>
    </condition>
    <center>
      <x-m>-5.43964</x-m>
      <y-m>0.00033</y-m>
      <z-m>-1.80979</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  <!-- BackDoorLeft animation -->
  <animation>
    <type>rotate</type>
    <object-name>CargoDoorLeft</object-name>
    <property>controls/switches/fuselage/cargo-door/position-norm</property>
    <factor>90</factor>
    <condition>
      <not>
        <greather-than>
          <property>controls/switches/fuselage/cargo-door/position-norm</property>
          <value type="double">0</value>
        </greather-than>
      </not>
    </condition>
    <center>
      <x-m>-0.03183</x-m>
      <y-m>-1.20911</y-m>
      <z-m>-0.33518</z-m>
    </center>
    <axis>
      <x>-.3</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>
  <!-- BackDoorRight animation -->
  <animation>
    <type>rotate</type>
    <object-name>CargoDoorRight</object-name>
    <property>controls/switches/fuselage/cargo-door/position-norm</property>
    <factor>-90</factor>
    <condition>
      <not>
        <greather-than>
          <property>controls/switches/fuselage/cargo-door/position-norm</property>
          <value type="double">0</value>
        </greather-than>
      </not>
    </condition>
    <center>
      <x-m>-0.03183</x-m>
      <y-m>1.20911</y-m>
      <z-m>-0.33518</z-m>
    </center>
    <axis>
      <x>-.3</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>CargoDoorLeft</object-name>
    <object-name>CargoDoorRight</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>Mi8.cargo_door.toggle();</script>
      </binding>
    </action>
  </animation>
  <!-- Left Door animation -->
  <animation>
    <type>translate</type>
    <object-name>LeftDoor</object-name>
    <object-name>DoorGlass</object-name>
    <object-name>DoorGlassExt</object-name>
    <property>controls/switches/fuselage/left-door-y/position-norm</property>
    <factor>-.06</factor>
    <condition>
      <not>
        <greather-than>
          <property>controls/switches/fuselage/left-door-y/position-norm</property>
          <value type="double">0</value>
        </greather-than>
      </not>
    </condition>
    <center>
      <x-m>-5.17369</x-m>
      <y-m>-1.13036</y-m>
      <z-m>-0.37822</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>translate</type>
    <object-name>LeftDoor</object-name>
    <object-name>DoorGlass</object-name>
    <object-name>DoorGlassExt</object-name>
    <property>controls/switches/fuselage/left-door-x/position-norm</property>
    <factor>.8</factor>
    <condition>
      <not>
        <greather-than>
          <property>controls/switches/fuselage/left-door-x/position-norm</property>
          <value type="double">0</value>
        </greather-than>
      </not>
    </condition>
    <center>
      <x-m>-5.17369</x-m>
      <y-m>-1.13036</y-m>
      <z-m>-0.37822</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>LeftDoor</object-name>
    <action>
      <button>0</button>
      <binding>
        <condition>
          <not>
            <property>controls/switches/fuselage/left-door-y/position-norm</property>
          </not>
        </condition>
        <command>property-interpolate</command>
        <property>controls/switches/fuselage/left-door-y/position-norm</property>
        <value type="double">1</value>
        <rate>0.5</rate>
      </binding>
      <binding>
        <condition>
          <property>controls/switches/fuselage/left-door-y/position-norm</property>
        </condition>
        <command>property-interpolate</command>
        <property>controls/switches/fuselage/left-door-y/position-norm</property>
        <value type="double">0</value>
        <rate>0.5</rate>
      </binding>
    </action>
    <action>
      <button>3</button>
      <binding>
        <condition>
          <property>controls/switches/fuselage/left-door-y/position-norm</property>
          <not>
            <property>controls/switches/fuselage/left-door-x/position-norm</property>
          </not>
        </condition>
        <command>property-interpolate</command>
        <property>controls/switches/fuselage/left-door-x/position-norm</property>
        <value type="double">1</value>
        <rate>0.5</rate>
      </binding>
    </action>
    <action>
      <button>4</button>
      <binding>
        <condition>
          <property>controls/switches/fuselage/left-door-x/position-norm</property>
        </condition>
        <command>property-interpolate</command>
        <property>controls/switches/fuselage/left-door-x/position-norm</property>
        <value type="double">0</value>
        <rate>0.5</rate>
      </binding>
    </action>
  </animation>
  <animation>
    <type>select</type>
    <object-name>GlassExt</object-name>
    <object-name>DoorGlassExt</object-name>
    <condition>
      <not>
        <property>sim/current-view/internal</property>
      </not>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>Glass</object-name>
    <object-name>DoorGlass</object-name>
    <condition>
      <property>sim/current-view/internal</property>
    </condition>
  </animation>
  <!-- Explosion fire particles effect -->
  <model>
    <name>explosion</name>
    <path>Aircraft/Mil-Mi-8/Models/Exterior/Explosion/explosion.xml</path>
    <offsets>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>-2.0</z-m>
    </offsets>
  </model>
  <animation>
    <object-name>explosion</object-name>
    <type>rotate</type>
    <property>/orientation/model/roll-deg</property>
    <factor>1</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <object-name>explosion</object-name>
    <type>rotate</type>
    <property>/orientation/model/pitch-deg</property>
    <factor>-1</factor>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <!-- Rotor dirt from the Mi-6PS-->
  <model>
    <path>Aircraft/Mil-Mi-8/Models/Exterior/RotorDirt/rotor_dirt.xml</path>
    <offsets>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </offsets>
  </model>
  <!-- -->
  <model>
    <path>Aircraft/Mil-Mi-8/Models/Exterior/Light/Mil-Mi-8-lights.xml</path>
  </model>
</PropertyList>